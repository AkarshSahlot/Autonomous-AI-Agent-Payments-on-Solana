{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@x402-flash/sdk": [
        "../sdk/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../sdk/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}